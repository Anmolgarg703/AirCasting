<h4>Heat Legend Units</h4>

<section class="collapsible">
<div class="slider">
  <input type="text" id="high-input" class="high narrow"></input>
  <p class="small-text">values greater than this will not be displayed</p>
</div>
<div class="slider wide-slider">
  <input type="text" id="mid-high-input" class="mid-high narrow"></input>
  <div id="mid-high-slider"></div>
</div>
<div class="slider wide-slider">
  <input type="text" id="mid-input" class="mid narrow"></input>
  <div id="mid-slider"></div>
</div>
<div class="slider wide-slider">
  <input type="text" id="mid-low-input" class="mid-low narrow"></input>
  <div id="mid-low-slider"></div>
</div>
<div class="slider">
  <input type="text" id="low-input" class="low narrow"></input>
  <p class="small-text">values less than this will not be displayed</p>
</div>

<div>
  <ul class="buttons">
    <li><button id="reset-heat-legend">reset</button></li>
    <li><button id="save-heat-legend">save</button></li>
  </ul>
</div>
</section>

<section>
<div>
  <ul class="legend">
    <li class="low">
    <span class="start">20dB</span>
    </li>
    <li class="mid">
    <span class="start">60dB</span>
    </li>
    <li class="midhigh">
    <span class="start">70dB</span>
    </li>
    <li class="high">
    <span class="start">80dB</span>
    <span class="end">100dB</span>
    </li>
  </ul>
</div>
</section>
