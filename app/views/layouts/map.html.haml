!!! 5
%html(ng-app="aircasting")
  %head
    %title AirCasting
    = stylesheet_link_tag    "application"
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?sensor=true"
    = javascript_include_tag "application"
    = favicon_link_tag "favicon.png"
    = csrf_meta_tags
    = render :partial => 'shared/analytics'
    = render :partial => 'shared/fb_logo'

  %body(id="map")
    .notice(ng-controller="FlashCtrl" ng-show="flash.message" ng-click="clear()") {{flash.message}}
    #mapview(googlemap)
    #hud(ng-controller="HudCtrl" ng-hide="map.streetViewVisible()")
      #left-hud(ng-include="" src="'/partials/left_hud.html'")
      #right-hud
        = yield
      #ajax-loader(spinner)
      #zoom-box
        .content
          #zoom-out(ng-click="zoomStep(-1)")
          #zoom-slider(slider=true slider-min=3 slider-max=21 slider-callback="onZoom" slider-value="map.getZoom()")
          #zoom-in(ng-click="zoomStep(1)")

:javascript
  window.marker_note_path = '#{image_path "marker_note.png"}';

#right-hud
